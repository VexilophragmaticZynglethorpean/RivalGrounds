#version 330 core
layout(location = 0) in vec3 aPos;
layout(location = 1) in vec3 aNor;
layout(location = 2) in vec3 aCol;

uniform mat4 proj;
uniform mat4 view;
uniform mat4 model;

out vec3 oNor;
out vec3 oCol;

void main() {
    oNor = aNor;
    oCol = aCol;
    gl_Position = proj * view * model * vec4(aPos, 1.0);
}
