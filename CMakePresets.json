{
  "version": 3,
  "cmakeMinimumRequired": { "major": 3, "minor": 22 },
  "configurePresets": [
    {
      "name": "vcpkg-debug",
      "description": "Debug build with vcpkg toolchain",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "vcpkg-release",
      "description": "Release build with vcpkg toolchain",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "vcpkg-debug"
    },
    {
      "name": "build-release",
      "configurePreset": "vcpkg-release"
    }
  ]
}
